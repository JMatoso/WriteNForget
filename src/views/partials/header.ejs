<!DOCTYPE html>
<html class="no-js" lang="en" data-bs-theme="light">

<head>
    <%- include ('metas.ejs') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">

    <script src="js/modernizr.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/js/all.min.js"
        integrity="sha512-u3fPA7V8qQmhBPNT5quvaXVa1mnnLSXUep5PS1qo5NRzHwG19aHmNJnj1Q8hpA/nBWZtZD4r4AX6YOt5ynLN2g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <%- include ('icons.ejs') %>
</head>

<div id="preloader">
    <div id="loader" class="dots-fade">
        <div></div>
        <div></div>
        <div></div>
    </div>
</div>

<header class="top-header">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item <%= locals.path === 'home' ? 'active' : '' %>">
                        <a class="nav-link" aria-current="page" href="/">Thoughts</a>
                    </li>
                    <% if (locals.user) { %>
                        <li class="nav-item <%= locals.path === 'mind' ? 'active' : '' %>">
                            <a class="nav-link" aria-current="page" href="/mind">My Mind</a>
                        </li>
                    <% } %>
                </ul>
                <form class="d-flex" role="search">
                    <input class="low-form-control me-2" autocomplete="on" type="search" placeholder="Search"
                        aria-label="Search">
                </form>
                <% if (locals.user) { %>
                    <a class="btn btn-success mx-2" href="/write">Write</a>
                    <div class="btn-group">
                        <button type="button" class="btn btn-warning"><%= locals.user.nickname %></button>
                        <button type="button" class="btn btn-warning dropdown-toggle dropdown-toggle-split"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/mind">Profile</a></li>
                            <li><a class="dropdown-item" href="#">Blind Mode</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
                        </ul>
                    </div>
                    <% } else { %>
                        <a class="btn btn-warning" href="/login">Login</a>
                    <% } %>
            </div>
        </div>
    </nav>
</header>

<body>
    <main role="main">
        <div class="container">