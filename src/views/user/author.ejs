<%- include ('../partials/header.ejs') %>

<div class="row">
    <div class="col-md-8 border-end">
        <%- include ('../partials/fragments/header.ejs', { title: data.data.user.nickname, cite: data.data.user.bio }) %>

        <div class="my-4">
            <%- include ('../partials/alerts.ejs') %>
        </div>

        <%- include ('../partials/posts.ejs', { data: { posts: data.data.posts, pagination: data.pagination } }) %>
    </div>
    <div class="col-md-4 position-relative">
        <div class="small-divider pb-5">
            <h3 class="text-center bg-text-black-50 fw-light">
                <span class="px-2">&#xb7;</span>
                <span class="px-2">&#xb7;</span>
                <span class="px-2">&#xb7;</span>
            </h3>
        </div>
        <div class="fixed-column bg-text-white p-4">
            <%- include ('../partials/fragments/counters.ejs', { followers: 0, postsCount }) %>
            <% if (user) { %>
                <a href="#" class="btn btn-light d-block w-100 mb-4">
                    Follow
                </a>
            <% } %>

            <%- include ('../partials/fragments/posts.ejs', { posts: latestReactions, title: 'Latest reactions' }) %>
            <%- include ('../partials/fragments/topics.ejs', { categories, title: 'Talks about' }) %>
            <div class="pb-5">&nbsp;</div>
        </div>
    </div>
</div>

<%- include ('../partials/footer.ejs') %>